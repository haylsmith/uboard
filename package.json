{
  "name": "uBoard",
  "version": "1.0.0",
  "main": "desktop.html",
  "window": {
    "show": true,
    "toolbar": false,
    "frame": true,
    "position": "center",
    "width": 480,
    "height": 320,
    "min_width": 480,
    "min_height": 320,
    "resizable": false,
    "kiosk": false
  },
  "chromium-args": "--child-clean-exit",
  "dependencies": {
    "cryptiles": "^4.1.3",
    "express": "^4.17.3",
    "mathjs": "^6.2.3",
    "opn": "^5.2.0",
    "robotjs": "0.6.0",
    "brightness": "3.0.0",
    "socket.io": "^2.3.0",
    "bootstrap-material-design": "^0.3.0",
    "jquery": "3.5.1",
    "hammerjs": "~2.0.4",
    "l20n": "~1.0.2",
    "bootstrap": "~4.5.0",
    "swiper": "^4.1.6",
    "favicons": "6.1.0",
    "jquery-qrcode": "*",
    "bootstrap-toggle": "^2.2.2"
  },
  "scripts": {
    "postinstall": "bower install",
    "dist-mac": "build --tasks mac-x64 --mirror https://dl.nwjs.io/ .",
    "dist": "build --tasks win-x86,win-x64,linux-x86,linux-x64,mac-x64 --mirror https://dl.nwjs.io/ .",
    "start": "run --mac-x64 --mirror https://dl.nwjs.io/ ."
  },
  "devDependencies": {
    "nwjs-builder-phoenix": "^1.14.6"
  },
  "build": {
    "nwVersion": "0.28.2",
    "packed": true
  }
}
